{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo build",
            "group": "build",
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "cargo build debug",
            "type": "shell",
            "command": "cargo",
            "args": ["build", "--bin", "teapot_app"],
            "group": "build",
            "problemMatcher": ["$rustc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "cargo run",
            "type": "shell",
            "command": "cargo run",
            "group": "test",
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "cargo clean",
            "type": "shell",
            "command": "cargo clean",
            "group": "build",
            "problemMatcher": ["$rustc"]
        }
    ]
}
